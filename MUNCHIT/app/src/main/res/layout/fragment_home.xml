<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="444dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/yellow"
            android:padding="10dp"
            android:text="HOME"
            android:textColor="@color/black"
            android:textSize="30dp"></TextView>
        <RelativeLayout
            android:background="@drawable/bottom"
            android:id="@+id/R1"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            >

            <ViewFlipper
                android:id="@+id/v_flipper"
                android:layout_width="match_parent"
                android:layout_height="216dp"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1600dp"
            android:background="@drawable/bottom"
            android:layout_weight="0.5">

            <ImageButton
                android:id="@+id/deal1"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:background="@drawable/deal1">

            </ImageButton>

            <ImageButton
                android:id="@+id/deal2"

                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:layout_marginTop="200dp"
                android:background="@drawable/deal2">

            </ImageButton>
            <ImageButton
                android:id="@+id/deal3"

                android:layout_marginTop="400dp"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:background="@drawable/deal3">

            </ImageButton>
            <ImageButton
                android:id="@+id/deal4"

                android:layout_marginTop="600dp"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:background="@drawable/deal4">

            </ImageButton>
            <ImageButton
                android:id="@+id/deal5"

                android:layout_marginTop="800dp"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:background="@drawable/deal5">

            </ImageButton>
            <ImageButton
                android:id="@+id/deal6"

                android:layout_marginTop="1000dp"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:background="@drawable/deal6">

            </ImageButton>
            <ImageButton
                android:id="@+id/deal7"

                android:layout_marginTop="1200dp"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:background="@drawable/deal7">

            </ImageButton>
            <ImageButton
                android:id="@+id/deal8"

                android:layout_marginTop="1400dp"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:background="@drawable/deal8">

            </ImageButton>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>